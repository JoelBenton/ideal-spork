<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>View Chirp</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <script>
      function deleteChirp(id) {
        fetch(`/chirp/${id}`, {
          method: 'DELETE',
        })
          .then((res) => {
            if (res.ok) {
              window.location.href = '/chirps';
            }
          })
          .catch((err) => {
            console.error(err);
            alert("Couldn't delete the chirp");
          });
      }
    </script>
  </head>
  <body class="flex items-center justify-center min-h-screen bg-gray-100">
    <div class="flex flex-col">
      <div class="max-w-md mx-auto bg-gray-200 p-4 rounded-lg">
        <h2 class="text-xl font-bold text-center mb-3">{{chirp.author_name}}</h2>
        <hr class="my-4 border-2 border-gray-300" />
        <p class="text-center mt-2">{{chirp.created_at}}</p>
        <hr class="my-4 border-2 border-gray-300" />
        <p class="text-center mt-2">{{chirp.content}}</p>
        <hr class="my-4 border-2 border-gray-300" />
        <div class="text-center">
            <button
              class="bg-red-500 hover:bg-red-700 text-white font-bold py-2 px-4 rounded mt-2"
              onClick="deleteChirp('{{chirp.id}}')"
            >
              Delete
            </button>

      </div>

      <div class="flex justify-center mt-4 gap-2">
        <a
          href="/"
          class="bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded"
        >Welcome Page</a>
        <a
          href="/chirps"
          class="bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded"
        >View Chirps</a>
      </div>
    </div>
  </body>
</html>